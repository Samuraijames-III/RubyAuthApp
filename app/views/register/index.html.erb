<% content_for :content do %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="w-50 mx-auto">
          <h1 class="mb-3 h1">Create a user</h1>
          <% flash.each do |type, msg| %>
            <div class="alert alert-<%= type %>">
              <%= msg %>
            </div>
          <% end %>
          <%= render :partial => "form" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>